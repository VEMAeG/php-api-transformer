{
    "name": "nilportugues/api-transformer",
    "type": "library",
    "description": "Base library providing the core functionality for API transformation.",
    "keywords": ["api", "serializer", "transformer", "psr7", "response"],
    "homepage": "http://nilportugues.com",
    "license": "MIT",
    "authors": [
        {
            "name": "Nil Portugués Calderó",
            "email": "contact@nilportugues.com",
            "role": "Project Lead Developer"
        }
    ],
    "require": {
        "php": ">=5.5.0",        
        "nilportugues/serializer": "1.0.0-alpha",
        "psr/http-message": "~1.0",
        "zendframework/zend-diactoros": "^1.1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "4.4.*",
        "fabpot/php-cs-fixer": "^1.9",
        "mmoreram/php-formatter": "dev-master",
        "satooshi/php-coveralls": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "NilPortugues\\Api\\Http\\": "src/Http/",
            "NilPortugues\\Api\\Mapping\\": "src/Mapping/",
            "NilPortugues\\Api\\Transformer\\": "src/Transformer/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "NilPortugues\\Tests\\Api\\Mapping\\": "tests/Mapping/",
            "NilPortugues\\Tests\\Api\\Transformer\\": "tests/Transformer/",
            "NilPortugues\\Tests\\Api\\Dummy\\": "tests/Dummy/"
        }
    },
    "config": {
        "bin-dir": "bin/"
    }
}
